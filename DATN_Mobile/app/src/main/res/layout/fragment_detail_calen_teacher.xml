<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DetailCalenTeacherFragment"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/df_blue">

<ImageView
    android:id="@+id/btn_detail_calen_teacher_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_backarrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="20dp"
    />

<TextView
    android:id="@+id/tv_detail_calen_teacher_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lịch báo cáo"
    android:layout_gravity="center"
    style="@style/textBoldTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:textColor="@color/df_white"
    />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/tv_detail_calen_teacher_title"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@drawable/bg_linear"
    android:layout_marginTop="65dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_linear"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_detail_calen_teacher_studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nguyễn Văn A"
            style="@style/textBold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_detail_calen_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp">

            <ImageView
                android:id="@+id/btn_detail_calen_teacher_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_cancel"
                />
            <ImageView
                android:id="@+id/btn_detail_calen_teacher_accept"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_accept"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>