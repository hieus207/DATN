<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DetailSuggestFragment"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/df_blue">

<ImageView
    android:id="@+id/btn_dtsuggest_teacher_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_backarrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="20dp"
    />

<TextView
    android:id="@+id/tv_dtsuggest_teacher_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đề xuất"
    android:layout_gravity="center"
    style="@style/textBoldTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:textColor="@color/df_white"
    />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/tv_dtsuggest_teacher_title"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@drawable/bg_linear"
    android:layout_marginTop="65dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_linear"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_dtsuggest_teacher_projectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kết nối thông minh"
            style="@style/textBold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_dtsuggest_teacher_studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            style="@style/textBold"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textColor="@color/df_blue"
            />

        <TextView
            android:id="@+id/tv_dtsuggest_teacher_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đường dẫn:"
            style="@style/textSemi"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_bg_small_blue"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
                <TextView
                    android:id="@+id/tv_dtsuggest_teacher_quest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hướng vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_bg_small_blue"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hướng giải quyết"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
                <TextView
                    android:id="@+id/tv_dtsuggest_teacher_solution"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hướng vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_bg_small_blue"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nền tảng phát triển"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
                <TextView
                    android:id="@+id/tv_dtsuggest_teacher_platform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hướng vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_bg_small_blue"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công nghệ sử dụng"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
                <TextView
                    android:id="@+id/tv_dtsuggest_teacher_tech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hướng vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_bg_small_blue"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các chức năng chính"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
                <TextView
                    android:id="@+id/tv_dtsuggest_teacher_func"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hướng vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_bg_small_blue"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kết quả mong muốn"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
                <TextView
                    android:id="@+id/tv_dtsuggest_teacher_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hướng vấn đề"
                    android:textColor="@color/black"
                    style="@style/textRegular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp">
            <ImageView
                android:id="@+id/btn_dtsuggest_teacher_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_cancel"
                />
            <ImageView
                android:id="@+id/btn_dtsuggest_teacher_accept"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_accept"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>