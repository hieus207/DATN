<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_itemCalen_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/_bg_small_blue">
            <TextView
                android:id="@+id/tv_itemCalen_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/textBoldTitle"
                />
            <TextView
                android:id="@+id/tv_itemCalen_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                android:padding="10dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_itemCalen_date"
                app:layout_constraintLeft_toLeftOf="@id/tv_itemCalen_date"
                style="@style/textRegular"
                />

            <ImageButton
                android:id="@+id/btn_itemCalen_del"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_small_delete"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                />

            <ImageButton
                android:id="@+id/btn_itemCalen_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_small_edit"
                app:layout_constraintRight_toLeftOf="@+id/btn_itemCalen_del"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>