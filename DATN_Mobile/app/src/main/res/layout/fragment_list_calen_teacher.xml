<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ListCalenTeacherFragment"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/df_blue">

<ImageView
    android:id="@+id/btn_listcalen_teacher_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_backarrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="20dp"
    />

<TextView
    android:id="@+id/tv_listcalen_teacher_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lịch"
    android:layout_gravity="center"
    style="@style/textBoldTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:textColor="@color/df_white"
    />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/tv_listcalen_teacher_title"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@drawable/bg_linear"
    android:layout_marginTop="65dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_linear"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_listcalen_teacher_listtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Danh sách sinh viên"
            style="@style/textBoldTitle"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_listcalen_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="20dp"
            />


    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>