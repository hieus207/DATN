<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTeacherFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/df_blue">

    <ImageView
        android:id="@+id/btn_shteacher_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_backarrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/tv_shteacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giảng viên"
        android:layout_gravity="center"
        style="@style/textBoldTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/df_white"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shproject_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_linear"
        android:layout_marginTop="65dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_linear"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="60dp"
                >
                <ImageView
                    android:id="@+id/img_shteacher_avt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_avatar_big"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_shteacher_name"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/textSemi"
                android:textStyle="bold"
                android:text="Nguyễn Văn A"
                android:textColor="@color/black"
                android:textSize="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shteacher_quota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã nhận 1/8 sinh viên"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/textRegular"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <TextView
                android:id="@+id/tv_shteacher_major"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ngành \n Hệ thống thông tin"
                android:padding="10dp"
                android:background="@color/_bg_small_blue"
                android:textColor="@color/black"
                style="@style/textRegular"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <TextView
                android:id="@+id/tv_shteacher_topic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hướng đề tài \n Phát triển ứng dụng di động"
                android:padding="10dp"
                android:background="@color/_bg_small_blue"
                android:textColor="@color/black"
                style="@style/textRegular"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"

            >
            <TextView
                android:id="@+id/tv_shteacher_platform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nền tảng phát triển \n Web, App"
                android:padding="10dp"
                android:background="@color/_bg_small_blue"
                android:textColor="@color/black"
                style="@style/textRegular"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_shteacher_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_apply"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>