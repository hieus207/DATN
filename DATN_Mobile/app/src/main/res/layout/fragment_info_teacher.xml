<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".InfoTeacherFragment"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/df_blue">
<ImageView
    android:id="@+id/btn_info_teacher_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_backarrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="20dp"
    />

<TextView
    android:id="@+id/tv_info_teacher_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Thông tin giảng viên"
    android:layout_gravity="center"
    style="@style/textBoldTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:textColor="@color/df_white"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_info_teacher_title">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_linear"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="10dp"
                >
            <ImageView
                android:id="@+id/img_info_teacher_avt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_avatar_big"
                android:scaleType="centerCrop"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Họ và tên"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                style="@style/cardEditText">

                <EditText
                    android:id="@+id/edt_info_teacher_fullname"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    style="@style/editTextInfo" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Ngày sinh"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                style="@style/cardEditText">

                <EditText
                    android:id="@+id/edt_info_teacher_birthday"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    style="@style/editTextInfo" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Ngành"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                style="@style/cardEditText">

                <Spinner
                    android:id="@+id/spinner_info_teacher_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/editTextInfo"
                    />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                style="@style/cardEditText">

                <EditText
                    android:id="@+id/edt_info_teacher_email"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    style="@style/editTextInfo" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                style="@style/cardEditText">

                <EditText
                    android:id="@+id/edt_info_teacher_phone"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    style="@style/editTextInfo"
                    />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Hướng đề tài"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                style="@style/cardEditText">

                <EditText
                    android:id="@+id/edt_info_teacher_direction"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    style="@style/editTextInfo" />
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Nền tảng phát triển"
                android:textColor="@color/black"
                android:textSize="18dp"
                style="@style/textBold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_info_teacher_platforms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                style="@style/cardEditText">

                <TextView
                    android:id="@+id/tv_info_teacher_platform"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    style="@style/editTextInfo"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_info_teacher_cancel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/btn_cancel" />

                <ImageView
                    android:id="@+id/btn_info_teacher_save"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btn_accept" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/btn_info_teacher_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/btn_edit"
        android:background="@null"
        />
</androidx.constraintlayout.widget.ConstraintLayout>