<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    >

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào, Bạn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        style="@style/textBold"
        />

    <LinearLayout
        android:id="@+id/ll_home_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_mon"
            android:layout_width="45dp"
            android:layout_height="49dp"

            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon"/>
                <TextView
                    android:id="@+id/tv_home_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_tue"
            android:layout_width="45dp"
            android:layout_height="49dp"

            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"/>
                <TextView
                    android:id="@+id/tv_home_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_wed"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"/>
                <TextView
                    android:id="@+id/tv_home_wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_thu"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"/>
                <TextView
                    android:id="@+id/tv_home_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_fri"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"/>
                <TextView
                    android:id="@+id/tv_home_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_sat"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat"/>
                <TextView
                    android:id="@+id/tv_home_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_sun"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"/>
                <TextView
                    android:id="@+id/tv_home_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dự án"
        app:layout_constraintLeft_toLeftOf="@id/tv_home_title"
        app:layout_constraintTop_toBottomOf="@+id/ll_home_day"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        android:textSize="20dp"
        android:textStyle="bold"
        style="@style/textBold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_home_project"
        android:layout_width="296dp"
        android:layout_height="184dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/df_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_home_project"
        style="@style/center"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_home_projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Tên dự án"
                style="@style/textRegular"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_home_teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:text="Tên giảng viên"
                style="@style/textRegular"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_home_reportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:text="Deadline"
                style="@style/textRegular"
                />
            <TextView
                android:id="@+id/tv_home_reportContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nội dung"
                style="@style/textRegular"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_home_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian"
        app:layout_constraintLeft_toLeftOf="@id/tv_home_title"
        app:layout_constraintTop_toBottomOf="@+id/cv_home_project"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        android:textSize="20dp"
        android:textStyle="bold"
        style="@style/textBold"
        />

    <ProgressBar
        android:id="@+id/pgb_home"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_home_timeline"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_timeline"
        android:progressTint="@color/df_blue"
        android:scaleY="2"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/tv_home_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pgb_home"
        app:layout_constraintLeft_toLeftOf="@id/tv_home_timeline"
        android:text="Ngày bắt đầu"
        style="@style/textRegular"
        />

    <TextView
        android:id="@+id/tv_home_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pgb_home"
        app:layout_constraintRight_toRightOf="@id/pgb_home"
        android:layout_marginRight="20dp"
        android:text="Ngày kết thúc"
        style="@style/textRegular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

