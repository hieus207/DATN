<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".DetailCalendarFragment"
android:background="@color/df_blue"
android:layout_weight="100"
    >

<ImageView
    android:id="@+id/btn_dtcalendar_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_backarrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="20dp"
    />

<TextView
    android:id="@+id/tv_dtcalendar_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lá»‹ch"
    android:layout_gravity="center"
    style="@style/textBoldTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@id/btn_dtcalendar_back"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginRight="40dp"
    android:textColor="@color/df_white"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/tv_dtcalendar_title"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="65dp"
    android:background="@drawable/bg_linear"
    android:orientation="vertical"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_dtcalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        />



</LinearLayout>

<androidx.cardview.widget.CardView
    android:id="@+id/cv_dtcalendar_add"
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintBottom_toBottomOf="parent"
    style="@style/center"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="65dp"
    app:cardCornerRadius="50dp"
    tools:ignore="MissingConstraints">
    <ImageButton
        android:id="@+id/btn_dtcalendar_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_add"
        android:background="@null"
        />
</androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/btn_calendar_apply"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_apply"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_dtcalendar_add"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="65dp"
        android:background="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

