<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".LoginFragment"
    >

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ ĐỒ ÁN TỐT NGHIỆP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/login_img_margin_top"
        android:textStyle="bold"
        android:textColor="@color/df_purple"
        android:textSize="20dp"
        style="@style/textBold"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_student"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_title"
        android:layout_marginTop="@dimen/login_img_margin_top"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_login_username"
        app:startIconDrawable="@drawable/ic_login"
        android:layout_width="@dimen/login_edt_width"
        android:layout_height="@dimen/login_edt_heigh"
        app:layout_constraintTop_toBottomOf="@+id/img_login"
        android:layout_marginTop="@dimen/login_img_margin_top"
        style="@style/Inputbox"

        tools:ignore="MissingConstraints">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_login_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tên tài khoản"
            android:backgroundTint="@color/df_white"
            style="@style/textRegular"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_login_password"
        app:startIconDrawable="@drawable/ic_login"
        android:layout_width="@dimen/login_edt_width"
        android:layout_height="@dimen/login_edt_heigh"
        app:layout_constraintTop_toBottomOf="@+id/layout_login_username"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        style="@style/Inputbox"
        tools:ignore="MissingConstraints"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Mật khẩu"
            android:backgroundTint="@color/df_white"
            android:inputType="textPassword"
            style="@style/textRegular"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/layout_login_btn"
        android:layout_width="@dimen/login_btn_width"
        android:layout_height="@dimen/login_btn_heigh"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_login_password"
        app:layout_constraintRight_toRightOf="@id/layout_login_password"
        android:backgroundTint="@color/df_white"
        android:layout_marginTop="36dp"
        >
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            style="@style/textRegular"
            android:textStyle="bold"
            android:textColor="@color/df_purple"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>