<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".HomeTeacherFragment">

<TextView
    android:id="@+id/tv_home_teacher_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Xin chào, Bạn"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/login_pwd_margin_top"
    android:layout_marginLeft="20dp"
    android:textSize="20dp"
    style="@style/textBold"
    />

    <LinearLayout
        android:id="@+id/ll_home_teacher_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_teacher_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/login_pwd_margin_top"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_mon"
            android:layout_width="45dp"
            android:layout_height="49dp"

            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon"/>
                <TextView
                    android:id="@+id/tv_home_teacher_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_tue"
            android:layout_width="45dp"
            android:layout_height="49dp"

            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"/>
                <TextView
                    android:id="@+id/tv_home_teacher_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_wed"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"/>
                <TextView
                    android:id="@+id/tv_home_teacher_wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_thu"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"/>
                <TextView
                    android:id="@+id/tv_home_teacher_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_fri"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"/>
                <TextView
                    android:id="@+id/tv_home_teacher_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_sat"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat"/>
                <TextView
                    android:id="@+id/tv_home_teacher_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_teacher_sun"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"/>
                <TextView
                    android:id="@+id/tv_home_teacher_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

<TextView
    android:id="@+id/tv_home_teacher_project"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dự án sinh viên"
    app:layout_constraintLeft_toLeftOf="@id/tv_home_teacher_title"
    app:layout_constraintTop_toBottomOf="@+id/ll_home_teacher_day"
    android:layout_marginTop="@dimen/login_pwd_margin_top"
    android:textSize="20dp"
    style="@style/textBold"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_home_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_home_teacher_project"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

<TextView
    android:id="@+id/tv_home_teacher_timeline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Thời gian"
    app:layout_constraintLeft_toLeftOf="@id/tv_home_teacher_title"
    app:layout_constraintTop_toBottomOf="@+id/rcv_home_teacher"
    android:layout_marginTop="@dimen/login_pwd_margin_top"
    android:textSize="20dp"
    style="@style/textBold"
    />

    <LinearLayout
        android:id="@+id/ll_home_teacher_pgb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_home_teacher_timeline"
        app:layout_constraintTop_toBottomOf="@id/tv_home_teacher_timeline"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
            <ProgressBar
                android:id="@+id/pgb_home_teacher"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="@color/df_blue"
                android:scaleY="2"
                />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_home_teacher_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_home_teacher_pgb"
        app:layout_constraintLeft_toLeftOf="@id/tv_home_teacher_timeline"
        android:text="Ngày bắt đầu"
        style="@style/textRegular"
        />

    <TextView
        android:id="@+id/tv_home_teacher_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_home_teacher_pgb"
        app:layout_constraintRight_toRightOf="@id/ll_home_teacher_pgb"
        android:layout_marginRight="20dp"
        android:text="Ngày kết thúc"
        style="@style/textRegular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

